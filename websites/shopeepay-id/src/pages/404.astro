---
import Layout from "../layouts/main.astro";
---

<Layout>
  <div class="container mx-auto p-12">
    <div class="space-y-8">
      <div class="space-y-2">
        <p class="text-4xl font-bold text-center">404 - Page Not Found</p>
        <p class="text-center">The page you are looking for does not exist.</p>
      </div>
      <a
        href="/"
        class="text-white duration-250 hover:opacity-80 block bg-primary px-8 py-4 rounded-full mx-auto w-64 transition-colors text-center"
      >
        Go back to Home
      </a>
    </div>
  </div>
</Layout>
