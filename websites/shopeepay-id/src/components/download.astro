---
import { Picture } from "astro:assets";
import type { AppLink } from "@/types";

interface Props {
  background: ImageMetadata;
  download: AppLink[];
  qrDownload: ImageMetadata;
}

const { download, background, qrDownload } = Astro.props;
---

<div class="relative selection:bg-white selection:text-primary">
  <Picture src={background} alt="Download" class="object-cover w-full h-90" />
  <div
    class="bg-primary md:bg-transparent md:overflow-hidden md:absolute w-full md:right-0 w-full md:w-2/5 p-12 text-white md:top-1/2 md:transform md:-translate-y-1/2"
  >
    <div class="container mx-auto space-y-4">
      <p class="font-bold text-3xl text-white text-center md:text-left">Download the ShopeePay App Now!</p>
      <div class="flex space-x-2 justify-center md:justify-start">
        {
          download.map((item) => (
            <a href={item.url} target="_blank" rel="noreferrer">
              <img src={item.logo} alt={item.alt ?? item.text} class="h-12 object-contain" />
            </a>
          ))
        }
      </div>
      <div class="flex justify-center md:justify-start">
        <Picture src={qrDownload} alt="qr code" class="w-24 rounded bg-white p-2" />
      </div>
    </div>
  </div>
</div>
